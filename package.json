{
  "name": "threat-dragon",
  "version": "2.4.1",
  "appBundleId": "org.owasp.threatdragon",
  "private": true,
  "scripts": {
    "audit": "npm-run-all audit:server audit:site || exit 0",
    "audit:server": "cd td.server && npm run audit || exit 0",
    "audit:site": "cd td.vue && npm run audit || exit 0",
    "audit:report": "node generate-security-report.js",
    "build": "npm-run-all build:vue build:server",
    "build:desktop": "cd td.vue && npm run build:desktop",
    "build:server": "cd td.server && npm run build",
    "build:vue": "cd td.vue && npm run build",
    "make-sbom": "npm-run-all make-sbom:server make-sbom:vue",
    "make-sbom:server": "cd td.server && npm run make-sbom",
    "make-sbom:vue": "cd td.vue && npm run make-sbom",
    "clean": "npm-run-all clean:server clean:vue clean:root",
    "clean:server": "cd td.server && npm run clean",
    "clean:root": "rimraf node_modules/ sbom.json sbom.xml",
    "clean:vue": "cd td.vue && npm run clean",
    "dev:vue": "cd td.vue && npm run dev",
    "dev:server": "cd td.server && npm run dev",
    "lint": "npm-run-all lint:server lint:vue || true",
    "lint:server": "cd td.server && npm run lint || true",
    "lint:vue": "cd td.vue && npm run lint || true",
    "lint:fix": "npm-run-all lint:fix:server lint:fix:vue",
    "lint:fix:server": "cd td.server && npm run lint:fix || true",
    "lint:fix:vue": "cd td.vue && npm run lint:fix || true",
    "pretest": "echo 'Skipping pretest checks'",
    "security": "npm audit && npm outdated",
    "start": "npm-run-all build:vue build:server start:server start:site",
    "start:desktop": "cd td.vue && npm run start:desktop",
    "start:server": "cd td.server && npm run start:server",
    "start:site": "cd td.vue && npm run start:serve",
    "stop": "npm-run-all stop:site stop:server",
    "stop:server": "cd td.server && npm run stop:server",
    "stop:site": "cd td.vue && npm run stop:serve",
    "test": "npm-run-all test:site test:server",
    "test:desktop": "cd td.vue && npm run test:desktop",
    "test:e2e:desktop": "cd td.vue && npm run build:desktop -- --publish=never && npm run test:e2e:desktop",
    "test:server": "cd td.server && npm run test:unit",
    "test:site": "cd td.vue && npm run test:unit",
    "test:vue": "cd td.vue && npm run test:vue",
    "analyze-deps": "npx depcruise --include-only '^(src|td.vue|td.server)' --output-type dot . | dot -T svg > dependency-graph.svg"
  },
  "keywords": [
    "threat dragon",
    "OWASP",
    "threat modeling",
    "STRIDE",
    "LINDDUN",
    "CIA",
    "DIE",
    "PLOT4ai"
  ],
  "description": "OWASP Threat Dragon - a free, open source threat modeling tool",
  "author": {
    "name": "OWASP Threat Dragon",
    "email": "jon.gadsden@owasp.org",
    "url": "https://owasp.org/www-project-threat-dragon/"
  },
  "license": "Apache-2.0",
  "homepage": "https://owasp.org/www-project-threat-dragon/",
  "repository": {
    "type": "git",
    "url": "git://github.com/OWASP/threat-dragon.git"
  },
  "bugs": {
    "email": "jon.gadsden@owasp.org",
    "url": "https://github.com/OWASP/threat-dragon/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.10",
    "@babel/eslint-parser": "^7.26.10",
    "@babel/node": "^7.26.0",
    "@babel/plugin-transform-runtime": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/register": "^7.25.9",
    "@babel/runtime": "^7.26.10",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/vue3-jest": "^29.2.6",
    "axios": "^1.8.3",
    "dependency-cruiser": "^13.1.5",
    "eslint": "^8.57.1",
    "eslint-plugin-cypress": "^2.15.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-vue": "^9.33.0",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.4.3",
    "rimraf": "3.0.2",
    "sass": "^1.85.1",
    "sass-loader": "^16.0.5"
  },
  "overrides": {
    "libxmljs2": "0.30.0",
    "http-errors": "2.0.0",
    "cross-spawn": "^7.0.3",
    "postcss": "^8.4.31",
    "yorkie": "npm:husky@^7.0.0",
    "@vue/component-compiler-utils": "^3.3.0",
    "ws": "^8.17.1",
    "puppeteer-core": "^22.12.0"
  },
  "workspaces": [
    "td.server",
    "td.vue"
  ]
}
