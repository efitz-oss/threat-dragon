{
  "name": "threat-dragon",
  "version": "2.4.1",
  "appBundleId": "org.owasp.threatdragon",
  "private": true,
  "scripts": {
    "analyze-deps": "npx depcruise --include-only '^(src|td.vue|td.server)' --output-type dot . | dot -T svg > dependency-graph.svg",
    "audit": "npm-run-all -p \"audit:*\" || exit 0",
    "audit:server": "npm run audit:server --workspace=threat-dragon-server || exit 0",
    "audit:vue": "npm run audit:vue --workspace=threat-dragon || exit 0",
    "build": "npm-run-all -p \"build:server\" \"build:site\"",
    "build:desktop": "npm run build:desktop --workspace=threat-dragon",
    "build:desktop:full": "npm run build:desktop:full --workspace=threat-dragon",
    "build:desktop:simple": "npm run build:desktop:simple --workspace=threat-dragon",
    "build:server": "npm run build:server --workspace=threat-dragon-server",
    "build:site": "npm run build:site --workspace=threat-dragon",
    "clean": "npm-run-all -p \"clean:*\"",
    "clean:files": "rimraf node_modules/ sbom.json sbom.xml",
    "clean:server": "npm run clean:server --workspace=threat-dragon-server",
    "clean:vue": "npm run clean:vue --workspace=threat-dragon",
    "cypress:open": "npm run cypress:open --workspace=threat-dragon",
    "cypress:update": "npm run cypress:update --workspace=threat-dragon",
    "dev": "npm-run-all --parallel dev:vue dev:server",
    "dev:server": "npm run dev:server --workspace=threat-dragon-server",
    "dev:site": "npm run dev:site --workspace=threat-dragon",
    "lint": "npm-run-all -p \"lint:*\" || true",
    "lint:desktop": "npm run lint:desktop --workspace=threat-dragon",
    "lint:server": "npm run lint:server --workspace=threat-dragon-server || true",
    "lint:vue": "npm run lint:vue --workspace=threat-dragon || true",
    "lint:fix": "npm-run-all -p \"lint:fix:*\"",
    "lint:fix:desktop": "npm run lint:fix:desktop --workspace=threat-dragon",
    "lint:fix:server": "npm run lint:fix:server --workspace=threat-dragon-server",
    "lint:fix:vue": "npm run lint:fix:vue --workspace=threat-dragon",
    "make-sbom": "npm-run-all -p \"make-sbom:json:root\" \"make-sbom:xml:root\"",
    "make-sbom:json": "npm-run-all -p make-sbom:json:server make-sbom:json:vue make-sbom:json:root",
    "make-sbom:json:root": "npm --loglevel=error exec -- cyclonedx-npm --omit=dev --ignore-npm-errors --spec-version=1.5 --output-format=JSON --output-file=sbom.json",
    "make-sbom:json:server": "npm run make-sbom:json:server --workspace=threat-dragon-server",
    "make-sbom:json:vue": "npm run make-sbom:json:vue --workspace=threat-dragon",
    "make-sbom:server": "npm run make-sbom:server --workspace=threat-dragon-server",
    "make-sbom:vue": "npm run make-sbom:vue --workspace=threat-dragon",
    "make-sbom:xml": "npm-run-all -p make-sbom:xml:server make-sbom:xml:vue make-sbom:xml:root",
    "make-sbom:xml:root": "npm --loglevel=error exec -- cyclonedx-npm --omit=dev --ignore-npm-errors --spec-version=1.5 --output-format=XML --output-file=sbom.xml",
    "make-sbom:xml:server": "npm run make-sbom:xml:server --workspace=threat-dragon-server",
    "make-sbom:xml:vue": "npm run make-sbom:xml:vue --workspace=threat-dragon",
    "package:desktop": "npm run package:desktop --workspace=threat-dragon",
    "package:desktop:linux": "npm run package:desktop:linux --workspace=threat-dragon",
    "package:desktop:mac": "npm run package:desktop:mac --workspace=threat-dragon",
    "package:desktop:win": "npm run package:desktop:win --workspace=threat-dragon",
    "pretest": "npm-run-all pretest:server pretest:site",
    "pretest:server": "cd td.server && npm run pretest",
    "pretest:site": "cd td.vue && npm run pretest",
    "postinstall": "cd td.server && npm install && cd ../td.vue && npm install",
    "start": "npm-run-all build start:server start:site",
    "start:desktop": "npm run start:desktop --workspace=threat-dragon",
    "start:desktop:simple": "npm run start:desktop:simple --workspace=threat-dragon",
    "start:server": "npm run start:server --workspace=threat-dragon-server",
    "start:site": "npm run start:serve --workspace=threat-dragon",
    "stop": "npm-run-all stop:site stop:server",
    "stop:server": "npm run stop:server --workspace=threat-dragon-server",
    "stop:site": "npm run stop:serve --workspace=threat-dragon",
    "test": "npm-run-all test:vue test:server",
    "test:desktop": "npm run test:desktop --workspace=threat-dragon",
    "test:e2e": "npm run test:e2e --workspace=threat-dragon",
    "test:e2e:desktop": "npm run test:e2e:desktop --workspace=threat-dragon",
    "test:e2e:local": "npm run test:e2e:local --workspace=threat-dragon",
    "test:server": "npm run test:unit --workspace=threat-dragon-server",
    "test:vue": "npm run test:unit --workspace=threat-dragon"
  },
  "keywords": [
    "threat dragon",
    "OWASP",
    "threat modeling",
    "STRIDE",
    "LINDDUN",
    "CIA",
    "DIE",
    "PLOT4ai"
  ],
  "description": "OWASP Threat Dragon - a free, open source threat modeling tool",
  "author": {
    "name": "OWASP Threat Dragon",
    "email": "jon.gadsden@owasp.org",
    "url": "https://owasp.org/www-project-threat-dragon/"
  },
  "license": "Apache-2.0",
  "homepage": "https://owasp.org/www-project-threat-dragon/",
  "repository": {
    "type": "git",
    "url": "git://github.com/OWASP/threat-dragon.git"
  },
  "bugs": {
    "email": "jon.gadsden@owasp.org",
    "url": "https://github.com/OWASP/threat-dragon/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.10",
    "@babel/eslint-parser": "^7.26.10",
    "@babel/node": "^7.26.0",
    "@babel/plugin-transform-runtime": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/register": "^7.25.9",
    "@babel/runtime": "^7.26.10",
    "@cyclonedx/cyclonedx-npm": "^2.1.0",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/vue3-jest": "^29.2.6",
    "axios": "^1.8.3",
    "babel-loader": "^10.0.0",
    "dependency-cruiser": "^13.1.5",
    "eslint": "^8.57.1",
    "eslint-plugin-cypress": "^2.15.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-vue": "^9.33.0",
    "html-webpack-plugin": "^5.6.3",
    "is-mergeable-object": "^1.1.1",
    "mocha": "^10.8.2",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "pm2": "^5.4.3",
    "rimraf": "3.0.2",
    "sass": "^1.85.1",
    "sass-loader": "^16.0.5"
  },
  "dependencies": {
    "dotenv": "^16.4.7"
  },
  "overrides": {
    "libxmljs2": "0.30.0",
    "cross-spawn": "^7.0.3",
    "postcss": "^8.4.31",
    "yorkie": "npm:husky@^7.0.0",
    "@vue/component-compiler-utils": "^3.3.0",
    "ws": "^8.17.1",
    "puppeteer-core": "^22.12.0",
    "semver": "^7.5.4",
    "got": "^11.8.5",
    "package-json": "^8.1.0",
    "update-notifier": "^6.0.2"
  },
  "workspaces": [
    "td.server",
    "td.vue"
  ],
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}